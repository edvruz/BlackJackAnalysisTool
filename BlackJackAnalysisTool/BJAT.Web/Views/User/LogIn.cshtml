@model BJAT.Web.Models.UserLoginModel
@{
    ViewBag.Title = "LogIn";
}

<h2>LogIn</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login Failed, check details");
    <div>
        <fieldset>
            <legend>Login Form</legend>
            <div>@Html.LabelFor(u => u.UserNameOrEmail)</div>
            <div>
                @Html.TextBoxFor(u => u.UserNameOrEmail)
                @Html.ValidationMessageFor(u => u.UserNameOrEmail)
            </div>
            <div>@Html.LabelFor(u => u.Password)</div>
            <div>
                @Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
            </div>
            <input type="submit" value="Log In"/>
        </fieldset>
    </div>
}

